<!-- activity_splash.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Image View (Picture on the left) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/splash_image"
            android:layout_width="329dp"
            android:layout_height="385dp"
            android:layout_gravity="center"
            android:src="@drawable/astrogirl6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/intro_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="396dp"
                    android:fontFamily="@font/gmarketsansttfbold"
                    android:text="@string/app_name"
                    android:textColor="#000000"
                    android:textSize="38sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/intro_text_1"
                    android:layout_width="273dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/gmarketsansttfmedium"
                    android:text="Instantly translate and read manga with cutting-edge AI and a cosmic touch."
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/intro_text_2"
                    tools:layout_editor_absoluteX="4dp" />

                <TextView
                    android:id="@+id/intro_text_2"
                    android:layout_width="273dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/gmarketsansttfmedium"
                    android:text="최첨단 AI와 우주적인 터치로 만화를 즉시 번역하고 읽어보세요."
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/intro_text"
                    tools:layout_editor_absoluteX="4dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- Replace with your image -->

    <!-- Text View (Text beside the image) -->
    <!-- Text View (Text beside the image) -->

</RelativeLayout>
